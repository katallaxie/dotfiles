{
    // Files:
    "files.associations": {
      ".babelrc": "jsonc",
      ".eslintrc": "jsonc",
      "*.pyi": "python",
      "*.bats": "shellscript"
    },
    "files.autoSave": "onFocusChange",
    "files.exclude": {
      "**/.DS_Store": true,
  
      "**/node_modules": true,
      "**/bower_components": true,
  
      "**/__pycache__": true,
      "**/.cache": true,
      "**/.idea": true,
      "**/.pytest_cache": true,
      "**/.mypy_cache": true,
      "**/.venv": true,
      "**/.coverage": true,
      "**/*.py[co]": true,
      "**/htmlcoverage": true,
      "**/docs/build": true
    },
  
    // Stats and telemetry:
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
  
    // Terminal:
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.enableBell": true
  }